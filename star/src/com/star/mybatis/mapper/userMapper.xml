<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="user">
 
<insert id="insert" parameterType="userVO">

	insert into tbl_user
	(user_id,user_password,user_name,user_address,user_phonenumber,user_age,user_gender) 
	values
	(#{userId},#{userPassword},#{userName},#{userAddress}, #{userPhonenumber},#{userAge},#{userGender})
	
</insert>

<select id="select" resultType="long">
	select user_number from tbl_user
	where user_id=#{userId}
</select>

<select id="getcountid" resultType="_int">
	select count(user_id) from tbl_user
	where user_id = #{userId}
</select>

<select id="login" resultType="long">
	select user_number from tbl_user
	where user_id = #{userId} and user_password = #{userPassword}
</select>

</mapper>


















